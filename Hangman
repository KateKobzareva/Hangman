dictionary = {'стотинка': 'болгарская разменная монета', 
'мадаполам': 'лёгкая хлопчатобумажная ткань полотняного плетения', 
'монокок': 'тип пространственной конструкции', 
'лилангени': 'денежная единица государства Эсватини',
'палимпсест': 'это рукопись на старом пергаменте',
'стукко': ' искусственный мрамор',
'фарсанг': 'персидская мера длины',
'эрупция': 'извержение вулкана',
'анкерок': 'это деревянный бочонок, употребляемый в шлюпках для хранения воды',
'ксантопсия': 'определенный вид нарушения зрительной функции',
'эшшольция': 'род растений семейства Маковые',
'шпрехшталмейстер': 'работник цирка, ведущий цирковое представление',
'ловчоррит': 'редкий минерал',
'кьёккенмединги': 'кухонные кучи эпохи мезолита',
'брандскугель': 'зажигательный снаряд гладкоствольной артиллери'}
print("Добро пожаловать в игру'Виселица'.")
print('У вас есть 10 попыток отгадать загадоное слово. Удачи!')
s = {'стотинка', 'мадаполам', 'монокок', 'лилангени', 'палимпсест', 'стукко', 'фарсанг', 'эрупция', 'анкерок', 'ксантопсия', 'эшшольция', 'шпрехшталмейстер', 'ловчоррит', 'кьёккенмединги', 'брандскугель'}
word = s.pop()
p_word = ['_' for i in range(len(word))]
let_was = []
attempt = 10
for i in range(1, 11):
    print('Загадонное слова:', *p_word)
    print('Введите букву или слово. Попытка номер', attempt)
    let = input().lower()
    if len(let) == 1 and let not in let_was:
        let_was.append(let)
    elif len(let) > 1:
        if let == word:
            print('Поздравляю!')
        else:
            attempt -= 1
            print(f'У вас осталось {attempt} попыток')
            continue 
    elif let in let_was:
        print('Буква уже была. Введите другую букву')
        let = input()
        let_was.append(let)
    if let in word:
        for j in range(len(word)):
            if word[j] == let:
                p_word.pop(j)
                p_word.insert(j, let)
    else:
        print('Такой буквы нет!')
    attempt -= 1
                

